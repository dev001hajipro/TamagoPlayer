<Window x:Class="TamagoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TamagoPlayer"
        mc:Ignorable="d"
        Title="たまごプレイヤー" MinHeight="480" MinWidth="640" Background="AliceBlue"
        SizeToContent="WidthAndHeight">
    <Grid x:Name="contentGrid" AllowDrop="True" Background="Transparent" Drop="OnDrop" DragEnter="OnDragEnter" MouseDown="OnMouseDown">
        <MediaElement x:Name="player" HorizontalAlignment="Left" VerticalAlignment="Top" LoadedBehavior="Manual" Stretch="Uniform" MediaOpened="OnMediaOpened"/>
    </Grid>
</Window>
